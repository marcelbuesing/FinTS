name:                fints
version:             0.1.0.0
synopsis:            FinTS 3.0 client library
-- description:
license:             MIT
license-file:        LICENSE
author:              marcelbuesing
maintainer:          buesing.marcel@googlemail.com
-- copyright:
category:            Data
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     FinTS.Data.ISO13616_IBAN
                     , FinTS.Data.ISO7064_CheckDigits
                     , FinTS.Data.ISO9362_BIC
                     , FinTS.Data.MT940
                     , FinTS.Data.SWIFT
                     , FinTS.Data.FinTS3
  -- other-modules:
  -- other-extensions:
  build-depends:       HsOpenSSL >= 0.11
                     , attoparsec >= 0.13
                     , base >=4.10 && <4.11
                     , base64-bytestring >= 1.0
                     , bytestring >= 0.10
                     , currency-codes == 2.0.0.0
                     , data-default >= 0.7
                     , http-client-openssl >= 0.2
                     , iso3166-country-codes == 0.20140203.8
                     , lens >= 4.10
                     , text >= 1.2
                     , time >= 1.8 && <1.9
                     , tuple >= 0.3
                     , wreq >= 0.5

  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite test
  default-language:    Haskell2010
  type:
    exitcode-stdio-1.0
  hs-source-dirs:      tests
  main-is:             mt940.hs
  build-depends:       HsOpenSSL >= 0.11
                     , attoparsec >= 0.13
                     , base >= 4 && < 5
                     , base64-bytestring >= 1.0
                     , bytestring >= 0.10
                     , currency-codes == 2.0.0.0
                     , data-default >= 0.7
                     , fints
                     , http-client-openssl >= 0.2
                     , iso3166-country-codes == 0.20140203.8
                     , lens >= 4.10
                     , tasty >= 0.11
                     , tasty-hunit >= 0.9
                     , time >= 1.8 && <1.9
                     , wreq >= 0.5